<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fiquedeolho.nfcatividadeapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.NFC" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".views.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.CheckNFCActivity" />
        <activity
            android:name=".views.AddAtividadeActivity"
            android:label="@string/title_page_activity_add_atividade"
            android:parentActivityName=".views.InitialNavigationActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="views.InitialNavigationActivity" />
        </activity>
        <activity
            android:name=".views.InitialNavigationActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.InfTarefasActivity"
            android:label="@string/title_page_activity_inf_tarefas"
            android:parentActivityName=".views.InitialNavigationActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".views.InitialNavigationActivity" />
        </activity>
        <activity
            android:name=".views.AddTarefaActivity"
            android:label="@string/title_page_activity_add_tarefa"
            android:parentActivityName=".views.InfTarefasActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="views.InfTarefasActivity" />
        </activity>
        <activity
            android:name=".views.RegrasTarefasActivity"
            android:label="@string/title_page_activity_regras_tarefa"
            android:parentActivityName=".views.InfTarefasActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="views.InfTarefasActivity" />
        </activity>
        <activity
            android:name=".views.PrecedenciaTarefaActivity"
            android:label="@string/title_page_activity_precedencia_tarefa"
            android:parentActivityName=".views.RegrasTarefasActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="views.RegrasTarefasActivity" />
        </activity>
        <activity android:name=".views.VinculoTarefaETagActivity" />
        <activity android:name=".views.InfTagsActivity"></activity>
    </application>

</manifest>