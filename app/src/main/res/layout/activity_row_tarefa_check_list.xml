<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_check_list"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="10dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/text_nome_tarefa_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/content_check_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/text_nome_tarefa_check">

                <TextView
                    android:id="@+id/text_status_check_nfc"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="15sp"/>

                <ImageView
                    android:id="@+id/image_check_valido"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_check_nfc_ok"
                    android:layout_marginLeft="10dp"
                    android:tint="@color/verde_default"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/image_check_invalido"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_check_nfc_fail"
                    android:layout_marginLeft="10dp"
                    android:tint="@color/vermelho_default"
                    android:visibility="gone"/>



            </LinearLayout>
            <TextView
                android:id="@+id/text_data_check_nfc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/content_check_status"
                android:textSize="15sp"
                android:text="dsajkdadjioajsoiadjio"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
